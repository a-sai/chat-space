.main-chat
  .main-chat__group-info
    .main-chat__group-info__items__group
      .main-chat__group-info__items__group__name= @group.name
      %ul.main-chat__group-info__items__group__member-list
        Member :
        - @group.users.each do |user|
          %li.main-chat__group-info__items__group__member-list_member= user.name
    = link_to edit_group_path(@group) do
      .main-chat__group-info__items__group__items__edit Edit
  .main-chat__message-list
    = render @messages
  .main-chat__message-form
    = form_for [@group, @message] do |f|
      .main-chat__message-form__input-box
        = f.text_field :content, class: 'main-chat__message-form__input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'main-chat__message-form__input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'main-chat__message-form__input-box__image__file'
      = f.submit 'Send', class: 'main-chat__message-form__input-box__send-btn'